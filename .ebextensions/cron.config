files:
  "/etc/cron.d/cron_example":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * root /usr/local/bin/cron_example.sh

  "/usr/local/bin/cron_example.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
        #!/bin/bash
        echo "This cron job is running at every minute." >> /var/log/cron.log 2>&1
        rm -f /tmp/environment
        # Write the current environment variables to a file
        printenv | sed 's/^\(.*\)$/export \1/g' > /tmp/environment
        cd /var/app/current
        source /tmp/environment
        source ../venv/staging-LQM1lest/bin/activate
        python -m backend.utils.szamlazz_hu >> /var/log/cron.log 2>&1
        exit 0