files:
    "/etc/cron.d/szamlazz_cron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/szamlazz.sh
    "/usr/local/bin/szamlazz.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            cd /var/app/current
            export PYTHONPATH=$PYTHONPATH:`pwd`
            source ../venv/staging-LQM1lest/bin/activate
            python3 -m backend.utils.szamlazz_hu >> /var/log/szamlazz_hu.log 2>&1
            exit 0
commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/szamlazz_cron.bak"
